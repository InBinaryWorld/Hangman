<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:id="@+id/wordTF" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:fontFamily="serif-monospace" android:textAlignment="center"
            android:textAllCaps="false" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="32dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/img1"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:scaleType="centerInside"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/wordTF"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" tools:ignore="ContentDescription"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:gravity="center" android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:gravity="center">
            <TextView
                    android:text="@string/lets_start"
                    android:layout_width="match_parent" android:fontFamily="serif-monospace"
                    android:layout_height="wrap_content" android:id="@+id/tipTF" android:layout_weight="1"
                    android:textSize="24sp" android:textAlignment="center" tools:ignore="NestedWeights"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/newGameBtn" android:layout_weight="0"
                    android:text="@string/new_game" android:onClick="newGame"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="center"
                android:layout_weight="0">

            <Button
                    android:text="A"
                    android:layout_width="match_parent" android:id="@+id/btnA"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ą"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnĄ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnB" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="C"
                    android:layout_width="match_parent" android:id="@+id/btnC"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ć"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnĆ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="D"
                    android:layout_width="match_parent" android:id="@+id/btnD"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="E"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnE" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ę"
                    android:layout_width="match_parent" android:id="@+id/btnĘ"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="center"
                android:layout_weight="0">

            <Button
                    android:text="F"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnF" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="G"
                    android:layout_width="match_parent" android:id="@+id/btnG"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="H"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnH" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="I"
                    android:layout_width="match_parent" android:id="@+id/btnI"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="J"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnJ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="K"
                    android:layout_width="match_parent" android:id="@+id/btnK"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="L"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnL" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ł"
                    android:layout_width="match_parent" android:id="@+id/btnŁ"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>

        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="center"
                android:layout_weight="0">

            <Button
                    android:text="M"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnM" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="N"
                    android:layout_width="match_parent" android:id="@+id/btnN"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ń"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnŃ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="O"
                    android:layout_width="match_parent" android:id="@+id/btnO"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ó"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnÓ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="P"
                    android:layout_width="match_parent" android:id="@+id/btnP"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="R"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnR" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="S"
                    android:layout_width="match_parent" android:id="@+id/btnS"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:gravity="center"
                android:layout_weight="0">

            <Button
                    android:text="Ś"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnŚ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="T"
                    android:layout_width="match_parent" android:id="@+id/btnT"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText,NestedWeights"
                    android:onClick="onAction"/>
            <Button
                    android:text="U"
                    android:layout_width="match_parent" android:id="@+id/btnU"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="W"
                    android:layout_width="match_parent" android:id="@+id/btnW"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Y"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnY" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Z"
                    android:layout_width="match_parent" android:id="@+id/btnZ"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>

            <Button
                    android:text="Ź"
                    android:layout_width="match_parent" android:id="@+id/btnŹ"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>
            <Button
                    android:text="Ż"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnŻ" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="onAction"/>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>