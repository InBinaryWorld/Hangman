                        android:text="Ć" android:id="@+id/btnĆ" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                        android:onClick="onAction" app:autoSizeTextType="uniform"
                        android:layout_width="match_parent" android:layout_height="match_parent"/>
                <Button
                        android:text="D" android:id="@+id/btnD" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                        android:onClick="onAction" app:autoSizeTextType="uniform"
                        android:layout_width="match_parent" android:layout_height="match_parent"/>
                <Button
