<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:gravity="center">
    <ImageView
            android:layout_width="match_parent" android:layout_height="match_parent"
            app:srcCompat="@drawable/img1" android:id="@+id/imageView"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:scaleType="centerInside" android:layout_marginTop="8dp"
            tools:ignore="ContentDescription" android:layout_weight="1"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">

        <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="7" app:autoSizeTextType="uniform"
                android:id="@+id/wordTF" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="serif-monospace"
                android:textAllCaps="false" android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" android:gravity="bottom"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
                android:textAlignment="center"/>


        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1,6.8"
                android:orientation="horizontal"
                android:id="@+id/linearLayout" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" app:autoSizeTextType="uniform"
                    android:id="@+id/tipTF"
                    android:fontFamily="serif-monospace"
                    android:textAllCaps="false" android:textStyle="bold" android:gravity="center"
                    android:textAlignment="center" android:layout_weight="3" android:text="@string/lets_start"/>
            <Button
                    android:text="New Game" android:layout_weight="1"
                    style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                    android:onClick="newGame" app:autoSizeTextType="uniform" android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <TableLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1,1.7" android:id="@+id/tableLayout"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="bottom" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent" tools:ignore="UselessParent"
                      android:layout_weight="1">
                <Button
                        android:text="A" android:id="@+id/btnA" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                        android:onClick="onAction" app:autoSizeTextType="uniform"
                        android:layout_width="match_parent" android:layout_height="match_parent"/>
                <Button
                        android:text="Ą" android:id="@+id/btnĄ" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                        android:onClick="onAction" app:autoSizeTextType="uniform"
                        android:layout_width="match_parent" android:layout_height="match_parent"/>
                <Button
                        android:text="B" android:id="@+id/btnB" android:layout_weight="1"
                        style="@style/Widget.AppCompat.Button.Colored" tools:ignore="HardcodedText"
                        android:onClick="onAction" app:autoSizeTextType="uniform"
                        android:layout_width="match_parent" android:layout_height="match_parent"/>
                <Button
                        android:text="C" android:id="@+id/btnC" android:layout_weight="1"
